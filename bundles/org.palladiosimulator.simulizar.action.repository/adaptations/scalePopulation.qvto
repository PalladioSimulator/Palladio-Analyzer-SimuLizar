transformation instantiateComponent(
							inout pcmUsage : PCM_USAGE,
							in actionRoleSet : ACTION_INSTANCE,
							in actionMapping : ACTION_MAPPING
							) {
		
property instantiatedComponentResourceContainerName = 'InstantiatedComponentResourceContainer';
property newPopulation : Integer = 2;
							
	/**
	 * Enact Adaptation Step Transformation to scale Population.
	 */
	main() {	
		assert fatal(pcmUsage.rootObjects()[Allocation]->size() > 0)
			with log ("Usage Model is empty!");
		var roleSet : RoleSet :=  actionRoleSet.rootObjects()[RoleSet]->any(true);
		var usageScenario : UsageScenario := pcmUsage.rootObjects()[UsageScenario]->any(true);
		var mappingRes : Mapping := actionMapping.rootObjects()[Mapping]->any(true);
		usageScenario.xmap enactScaling(roleSet, mappingRes);
	}
	
	mapping inout UsageScenario::enactScaling(roleSet : RoleSet, mappingRes : Mapping) {
		var roles := roleSet.roles;
		var usageScenarioRole : instance::Role := roles->select(role | role.roleType.id = '_QGoXJQlYEe2py52lapYZiQ')->any(true);
		
		var usageScenarioScale : UsageScenario := usageScenarioRole.value.oclAsType(UsageScenario);
		
		usageScenarioScale.workload_UsageScenario = self.subobjectsOfType(ClosedWorkload)->map reconfigureClosedWorkload(newPopulation);

		// No stereotype is removed here.
		
		log("Workload scaled to " + newPopulation.toString());
	}
	
	mapping inout ClosedWorkload::reconfigureClosedWorkload(newPopulation : Integer)
	{
		self._population := newPopulation;
		log("Reconfigured Population!");
	}
}